<?xml version="1.0" encoding="UTF-8" ?><configuration>    <property name="LOGS" value="./logs" />    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">        <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">                <prettyPrint>True</prettyPrint>            </jsonFormatter>            <timestampFormat>dd.MM.yyyy' 'HH.mm.ss.SSS</timestampFormat>            <appendLineSeparator>false</appendLineSeparator>        </layout>    </appender>    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>${LOGS}/kalavithi-service.log</file>        <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">                <prettyPrint>True</prettyPrint>            </jsonFormatter>            <timestampFormat>dd.MM.yyyy' 'HH.mm.ss.SSS</timestampFormat>            <appendLineSeparator>false</appendLineSeparator>        </layout>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <fileNamePattern>${LOGS}/archived/kalavithi-service-%d{yyyy-MM-dd}.%i.log</fileNamePattern>            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>10MB</maxFileSize>            </timeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>    </appender>    <root level="info">        <appender-ref ref="Console" />    </root>    <logger name="com.tw.prograd" level="trace" additivity="false">        <appender-ref ref="RollingFile" />        <appender-ref ref="Console" />    </logger></configuration>